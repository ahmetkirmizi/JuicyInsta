<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextViewMedium" parent="TextViewLarge" >
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>

    </style>

    <style name="ButtonBlueLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:minEms">12</item>
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="ButtonLargeOrange" parent="ButtonBlueLarge">
        <item name="android:background">@drawable/bg_btn_orange</item>
    </style>

    <style name="ButtonLargeGreen" parent="ButtonBlueLarge">
        <item name="android:background">@drawable/bg_btn_green</item>
    </style>

</resources>
