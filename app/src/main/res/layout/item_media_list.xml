<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/list_imageview"
            android:layout_width="@dimen/image_media"
            android:layout_height="@dimen/image_media"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/list_tvLikes"
                style="@style/TextViewMedium"
                android:drawableTop="@drawable/like"
                android:layout_weight="1"
                android:textColor="@color/flat_red_light"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/list_tvComments"
                style="@style/TextViewMedium"
                android:drawableTop="@drawable/comments"
                android:layout_weight="1"
                android:textColor="@color/flat_green_light"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/list_tvDate"
                style="@style/TextViewMedium"
                android:layout_weight="1"
                android:drawableTop="@drawable/date"
                android:textColor="@color/flat_black_dark"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_tvCaption"
            style="@style/TextViewMedium"
            android:layout_weight="1"
            android:textColor="@color/secondary_text"/>

    </LinearLayout>

</android.support.v7.widget.CardView>